<h1>
  <%= @cocktail.name %>
</h1>

<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
<br>

<h2>Here are the ingredients</h2>

<% @cocktail.doses.each do |dose| %>
<ul>
  <li>
    <%= dose.description %>
    <%= dose.ingredient.name %>
    <%= link_to 'Delete dose', dose_path(dose), method: :delete  %>
  </li>
</ul>
<% end %>



<%= link_to 'Add a new ingredient', new_cocktail_dose_path(@cocktail) %>
<br>
<%= link_to 'Back to list', cocktails_path %>



